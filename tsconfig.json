{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es7", "dom"],
    "sourceMap": false,
    "outDir": "./.temp",
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "pretty": true,
    "declaration": false,
    "removeComments": true
  },
  "include": [
    "src/**/*",
    "spec/**/*"
  ],
  "exclude": [
    "src/api/core/componentStorage.ts",
    "src/api/core/module.ts",
    "src/api/core/tokenManager.ts",
    "src/api/dataops/filteringCondition.ts"
  ]
}
