{
  "compilerOptions": {
    "strict": true,
    "types": ["jasmine"],
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "outDir": "./dist/js",
    "typeRoots": [
      "./typings/globals",
      "./typings/modules"
    ],
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "pretty": true,
    "removeComments": true
  },
  "include": [
    "src/**/*",
    "spec/**/*"
  ]
}
